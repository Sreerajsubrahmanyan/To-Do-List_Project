<div class="container">
  <h1 class="mb-4">New Task</h1>

  <%= form_with(model: @task, local: true, class: 'card p-4') do |form| %>
    <div class="mb-3">
      <%= form.label :title, class: 'form-label' %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :due_date, class: 'form-label' %>
      <%= form.date_field :due_date, class: 'form-control' %>
    </div>

    <div class="form-check mb-3">
      <%= form.check_box :completed, class: 'form-check-input' %>
      <%= form.label :completed, 'Mark as Completed', class: 'form-check-label' %>
    </div>

    <div class="d-flex gap-2">
      <%= form.submit 'Save Task', class: 'btn btn-success' %>
      <%= link_to 'Back', tasks_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>

